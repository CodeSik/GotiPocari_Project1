<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="60dp"
    android:weightSum="21"
    tools:context=".ui.randomgame.RandomGameFragment">

    <ImageView
        android:id="@+id/text_randomgame"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="17"
        android:src="@drawable/bottle_soju"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rg_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        />

    <Button
        android:id="@+id/spin_bottle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="3"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/randgame_button_text"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        />

</android.widget.LinearLayout>